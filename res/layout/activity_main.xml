<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="th.ac.kmitl.it.slimdugong.MainActivity" >

    <th.ac.kmitl.it.slimdugong.custom.view.CharacterView
        android:id="@+id/character_view"
        android:layout_width="200dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/character_view"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="215dp"
        android:text="TEST01"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/statsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/character_view"
        android:layout_below="@+id/character_view"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:text="สถิติรายวัน"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/consume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/statsname"
        android:layout_below="@+id/statsname"
        android:layout_marginTop="16dp"
        android:text="บริโภค :" />

    <TextView
        android:id="@+id/burn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/consume"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="เผาผลาญ :" />

    <TextView
        android:id="@+id/burn_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/burn"
        android:layout_alignBottom="@+id/burn"
        android:layout_toLeftOf="@+id/status_workout"
        android:text="3434534" />

    <ImageButton
        android:id="@+id/status_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_view"
        android:layout_toLeftOf="@+id/status_eat"
        android:background="@android:color/transparent"
        android:src="@drawable/status_workout_green" />

    <ImageButton
        android:id="@+id/status_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name"
        android:layout_alignTop="@+id/status_workout"
        android:background="@android:color/transparent"
        android:src="@drawable/status_eat_gray" />

    <TextView
        android:id="@+id/msg_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="28dp"
        android:background="@drawable/msg_box" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg_box"
        android:layout_alignRight="@+id/name"
        android:layout_marginBottom="70dp"
        android:text="หิวจังเลย" />

    <TextView
        android:id="@+id/consume_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/consume"
        android:layout_alignBottom="@+id/consume"
        android:layout_alignLeft="@+id/burn_num"
        android:text="324324" />

</RelativeLayout>
